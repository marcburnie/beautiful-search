{
  "manifest_version": 2,
  "name": "Beautiful Search",
  "version": "1.0",
  "description": "Prettifies your Google search page with beautiful background photos and inspirational quotes.",
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "all_frames": true,
      "js": ["jquery.min.js", "main.js"],
      "css": ["index.css"]
    }
  ],
  "page_action": {
    "default_icon": "img.png",
    "default_title": "Have a beautiful day"
  }
}
